<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical|center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/bodymap_iv_head"
        android:layout_width="104dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/bhead" />

    <ImageView
        android:id="@+id/bodymap_iv_body"
        android:layout_width="104dp"
        android:layout_height="143dp"
        android:layout_alignLeft="@+id/bodymap_iv_head"
        android:layout_below="@+id/bodymap_iv_head"
        android:src="@drawable/bbody" />

    <ImageView
        android:id="@+id/bodymap_iv_l_thigh"
        android:layout_width="63dp"
        android:layout_height="108dp"
        android:layout_alignRight="@+id/bodymap_iv_body"
        android:layout_alignTop="@+id/bodymap_iv_r_thigh"
        android:layout_marginRight="53dp"
        android:src="@drawable/blefthigh" />

    <ImageView
        android:id="@+id/bodymap_iv_r_thigh"
        android:layout_width="72dp"
        android:layout_height="108dp"
        android:layout_alignLeft="@+id/bodymap_iv_body"
        android:layout_below="@+id/bodymap_iv_body"
        android:layout_marginLeft="49dp"
        android:src="@drawable/brightthigh" />

    <ImageView
        android:id="@+id/bodymap_iv_l_arm"
        android:layout_width="83dp"
        android:layout_height="264dp"
        android:layout_alignTop="@+id/bodymap_iv_head"
        android:layout_marginTop="102dp"
        android:layout_toLeftOf="@+id/bodymap_iv_head"
        android:src="@drawable/bleftarm" />

    <ImageView
        android:id="@+id/bodymap_iv_r_arm"
        android:layout_width="86dp"
        android:layout_height="267dp"
        android:layout_alignTop="@+id/bodymap_iv_head"
        android:layout_marginTop="103dp"
        android:layout_toRightOf="@+id/bodymap_iv_head"
        android:src="@drawable/brightarm" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bodymap_iv_l_thigh"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="请点击已部署电子皮肤的明亮处"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#0000ff" />

</RelativeLayout>
