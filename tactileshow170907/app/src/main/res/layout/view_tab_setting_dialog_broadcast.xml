<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:id="@+id/broadcast_dialog_gl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:columnCount="5"
        android:rowCount="5">

        <!-- 第一行 -->
        <TextView
            android:layout_column="0"
            android:layout_row="1"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="项目" />

        <TextView
            android:layout_column="1"
            android:layout_row="1"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="范围" />

        <TextView
            android:layout_column="2"
            android:layout_row="1"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="最小值" />

        <TextView
            android:layout_column="3"
            android:layout_row="1"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="最大值" />

        <TextView
            android:layout_column="4"
            android:layout_row="1"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="启用" />

        <!-- 第二行 -->
        <TextView
            android:layout_column="0"
            android:layout_row="2"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="温度" />

        <CheckBox
            android:id="@+id/broadcast_dialog_cb_temp_range"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:layout_row="2" />

        <EditText
            android:id="@+id/broadcast_dialog_et_temp_min"
            android:layout_width="60dp"
            android:layout_column="2"
            android:layout_row="2"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="20"
            android:textSize="12sp">

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/broadcast_dialog_et_temp_max"
            android:layout_width="60dp"
            android:layout_column="3"
            android:layout_row="2"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="50"
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/broadcast_dialog_cb_temp"
            android:layout_column="4"
            android:layout_gravity="center_horizontal"
            android:layout_row="2" />

        <!-- 第三行 -->
        <TextView
            android:layout_column="0"
            android:layout_row="3"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="压力" />

        <CheckBox
            android:id="@+id/broadcast_dialog_cb_header_range"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:layout_row="3" />

        <EditText
            android:id="@+id/broadcast_dialog_et_header_min"
            android:layout_width="60dp"
            android:layout_column="2"
            android:layout_row="3"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="20"
            android:textSize="12sp">

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/broadcast_dialog_et_header_max"
            android:layout_width="60dp"
            android:layout_column="3"
            android:layout_row="3"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="50"
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/broadcast_dialog_cb_header"
            android:layout_column="4"
            android:layout_gravity="center_horizontal"
            android:layout_row="3" />

        <!-- 第四行 -->
        <TextView
            android:layout_column="0"
            android:layout_row="4"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="湿度" />

        <CheckBox
            android:id="@+id/broadcast_dialog_cb_hum_range"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:layout_row="4" />

        <EditText
            android:id="@+id/broadcast_dialog_et_hum_min"
            android:layout_width="60dp"
            android:layout_column="2"
            android:layout_row="4"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="0"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/broadcast_dialog_et_hum_max"
            android:layout_width="60dp"
            android:layout_column="3"
            android:layout_row="4"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="100"
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/broadcast_dialog_cb_hum"
            android:layout_column="4"
            android:layout_gravity="center_horizontal"
            android:layout_row="4" />
    </GridLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/broadcast_dialog_gl"
        android:layout_alignRight="@+id/broadcast_dialog_gl"
        android:layout_below="@+id/broadcast_dialog_gl"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/broadcast_dialog_tv_per"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="周期秒" />

        <EditText
            android:id="@+id/broadcast_dialog_et_per"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/broadcast_dialog_btn_sure"
            android:layout_toRightOf="@+id/broadcast_dialog_tv_per"
            android:ems="10"
            android:inputType="number"
            android:text="1"
            android:textSize="12sp" />

        <Button
            android:id="@+id/broadcast_dialog_btn_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="确定" />
    </RelativeLayout>
</RelativeLayout>