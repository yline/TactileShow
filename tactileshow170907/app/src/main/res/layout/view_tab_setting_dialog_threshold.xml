<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:columnCount="4"
        android:rowCount="5">

        <!-- 第一列 -->
        <TextView
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:padding="5dp"
            android:text="项目" />

        <TextView
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:padding="5dp"
            android:text="温度" />

        <TextView
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:padding="5dp"
            android:text="湿度" />

        <TextView
            android:id="@+id/textView7"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="4"
            android:padding="5dp"
            android:text="炎症" />

        <!-- 第二列 -->
        <TextView
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:padding="5dp"
            android:text="最小值" />

        <EditText
            android:id="@+id/threshold_temp_min"
            android:layout_width="60dp"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:ems="10"
            android:inputType="numberDecimal"
            android:padding="5dp"
            android:text="10"
            android:textSize="12sp">

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/threshold_press_min"
            android:layout_width="60dp"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:ems="10"
            android:inputType="numberDecimal"
            android:padding="5dp"
            android:text="30"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/threshold_germ_min"
            android:layout_width="60dp"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="4"
            android:ems="10"
            android:inputType="numberDecimal"
            android:padding="5dp"
            android:text="38"
            android:textSize="12sp" />

        <!-- 第三列 -->
        <TextView
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:padding="5dp"
            android:text="中间值" />

        <EditText
            android:id="@+id/threshold_temp_mid"
            android:layout_width="60dp"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:ems="10"
            android:inputType="numberDecimal"
            android:padding="5dp"
            android:text="20"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/threshold_press_mid"
            android:layout_width="60dp"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:ems="10"
            android:inputType="numberDecimal"
            android:padding="5dp"
            android:text="50"
            android:textSize="12sp" />

        <!-- 第四列 -->
        <TextView
            android:layout_column="3"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:padding="5dp"
            android:text="最大值" />

        <EditText
            android:id="@+id/threshold_temp_max"
            android:layout_width="60dp"
            android:layout_column="3"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:ems="10"
            android:inputType="numberDecimal"
            android:padding="5dp"
            android:text="30"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/threshold_press_max"
            android:layout_width="60dp"
            android:layout_column="3"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:ems="10"
            android:inputType="numberDecimal"
            android:padding="5dp"
            android:text="80"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/threshold_germ_max"
            android:layout_width="60dp"
            android:layout_column="3"
            android:layout_gravity="left|top"
            android:layout_row="4"
            android:ems="10"
            android:inputType="numberDecimal"
            android:padding="5dp"
            android:text="42"
            android:textSize="12sp" />
    </GridLayout>

    <Button
        android:id="@+id/threshold_dialog_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="确定" />
</LinearLayout>