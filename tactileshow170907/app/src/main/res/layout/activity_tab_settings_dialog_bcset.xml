<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="6"
            android:rowCount="5">

    <TextView
        android:id="@+id/textView1"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:text="项目"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:text="范围"/>

    <TextView
        android:id="@+id/setting_bc_tv_minvalue"
        android:layout_column="2"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:text="最小值"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_column="3"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:text="最大值"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_column="4"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="1"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:text="周期秒"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_column="5"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:text="启用"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:text="温度"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="3"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:text="湿度"/>

    <CheckBox
        android:id="@+id/setting_bc_cb_temprange"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="2"/>

    <CheckBox
        android:id="@+id/setting_bc_cb_pressrange"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="3"/>

    <EditText
        android:id="@+id/setting_bc_et_tempmin"
        android:layout_width="60dp"
        android:layout_column="2"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="20"
        android:textSize="12sp">

        <requestFocus/>
    </EditText>

    <EditText
        android:id="@+id/setting_bc_et_pressmin"
        android:layout_width="60dp"
        android:layout_column="2"
        android:layout_gravity="left|top"
        android:layout_row="3"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="0"
        android:textSize="12sp"/>

    <EditText
        android:id="@+id/setting_bc_et_tempmax"
        android:layout_width="60dp"
        android:layout_column="3"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="50"
        android:textSize="12sp"/>

    <EditText
        android:id="@+id/setting_bc_et_pressmax"
        android:layout_width="60dp"
        android:layout_column="3"
        android:layout_gravity="left|top"
        android:layout_row="3"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="100"
        android:textSize="12sp"/>

    <EditText
        android:id="@+id/setting_bc_et_tempper"
        android:layout_width="40dp"
        android:layout_column="4"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:ems="10"
        android:inputType="number"
        android:text="1"
        android:textSize="12sp"/>

    <EditText
        android:id="@+id/setting_bc_et_pressper"
        android:layout_width="40dp"
        android:layout_column="4"
        android:layout_gravity="left|top"
        android:layout_row="3"
        android:ems="10"
        android:inputType="number"
        android:text="1"
        android:textSize="12sp"/>

    <CheckBox
        android:id="@+id/setting_bc_cb_tempenable"
        android:layout_column="5"
        android:layout_gravity="left|top"
        android:layout_row="2"/>

    <CheckBox
        android:id="@+id/setting_bc_cb_pressenable"
        android:layout_column="5"
        android:layout_gravity="left|top"
        android:layout_row="3"/>

    <Button
        android:id="@+id/setting_bc_bt_ok"
        style="?android:attr/buttonStyleSmall"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="6"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="4"
        android:gravity="center"
        android:text="确定"/>
</GridLayout>