<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black">

        <SurfaceView
            android:id="@+id/wechat_record_surfaceView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:visibility="visible">

        <TextView
            android:id="@+id/wechat_record_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:padding="2dp"
            android:text="上滑取消录制"
            android:textColor="@android:color/white"
            android:textSize="12dp"
            android:visibility="visible" />

        <com.record.module.record.view.RecordProgressView
            android:id="@+id/wechat_record_progress"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/wechat_record_hint"
            android:layout_marginTop="10dp"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/wechat_record_progress"
            android:layout_centerVertical="true"
            android:visibility="visible">

            <com.record.module.record.view.CircleTextView
                android:id="@+id/wechat_record_press"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:text="按住拍"
                android:textColor="@android:color/holo_green_light"
                android:textSize="20dp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>